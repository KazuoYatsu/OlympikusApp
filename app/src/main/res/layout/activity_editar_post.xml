<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#3F3F3F"
    tools:context="com.appolympikus.myapplication.EditarPostActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="8dp">


        <Button
            android:id="@+id/btn_compartilhar_foto_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compartilhar" />

        <Button
            android:id="@+id/btn_toolbar_voltar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar" />


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/img_thumbnail_editar_id"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="64dp"
        android:background="#2d2d2d"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_add_local_id"
        android:layout_width="84dp"
        android:layout_height="79dp"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/roudedbutton"
        android:text="Local"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_link_id"
        app:layout_constraintTop_toBottomOf="@+id/edt_local_id" />

    <Button
        android:id="@+id/btn_add_link_id"
        android:layout_width="82dp"
        android:layout_height="79dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/roudedbutton"
        android:text="Link"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_editar_valor_id" />

    <Button
        android:id="@+id/btn_editar_valor_id"
        android:layout_width="82dp"
        android:layout_height="79dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/roudedbutton"

        android:text="Valor"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_editar_logo_id"

        />

    <Button
        android:id="@+id/btn_editar_logo_id"
        android:layout_width="82dp"
        android:layout_height="79dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/roudedbutton"
        android:text="Logo"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/edt_local_id" />

    <EditText
        android:id="@+id/edt_link_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/edt_local_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_thumbnail_editar_id" />

    <EditText
        android:id="@+id/edt_local_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/btn_editar_valor_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
