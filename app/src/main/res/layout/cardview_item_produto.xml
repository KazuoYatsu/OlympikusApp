<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_produto_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/cardview_largura"
    android:layout_height="@dimen/cardview_altura"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_produto_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imgproduto_altura"
            android:background="@drawable/img1_small"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_titulo_ref_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="REF.:X999-9999-999"/>
    </LinearLayout>

</android.support.v7.widget.CardView>